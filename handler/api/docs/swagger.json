                "user_id": {
                    "type": "string",
                    "format": "uuid"
                }
            }
        },
        "actions.CreateResponse": {
            "type": "object",
            "properties": {
                "code": {
                    "description": "multisig payment code",
                    "type": "string"
                },
                "code_url": {
                    "description": "multisig payment code url",
                    "type": "string"
                },
                "memo": {
                    "description": "payment memo",
                    "type": "string"
                }
            }
        },
        "api.Asset": {
            "type": "object",
            "properties": {
                "chain": {
                    "$ref": "#/definitions/api.Asset"
                },
                "chain_id": {
                    "type": "string"
                },
                "id": {
                    "description": "mixin asset id",
                    "type": "string"
                },
                "logo": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "price": {
                    "type": "string"
                },
                "symbol": {
                    "type": "string"
                }
            }
