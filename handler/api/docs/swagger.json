        "user.LoginResponse": {
            "type": "object",
            "properties": {
                "avatar": {
                    "description": "user avatar",
                    "type": "string"
                },
                "id": {
                    "description": "user mixin id",
                    "type": "string",
                    "format": "uuid"
                },
                "name": {
                    "description": "user name",
                    "type": "string"
                },
                "scope": {
                    "description": "mixin oauth scope",
                    "type": "string"
                },
                "token": {
                    "description": "mixin oauth token",
                    "type": "string"
                }
            }
        },
        "views.Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer"
                },
                "msg": {
                    "type": "string"
                }
            }
